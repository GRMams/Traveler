{% extends 'base.html.twig' %}

{% block title %}Voyage index{% endblock %}

{% block body %}
    <h1>Voyage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Date_de_voyage</th>
                <th>Note</th>
                <th>Nb_de_km_parcourues</th>
                <th>Id</th>
                <th>Created</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voyage in voyages %}
            <tr>
                <td>{{ voyage.titre }}</td>
                <td>{{ voyage.description }}</td>
                <td>{{ voyage.dateDeVoyage ? voyage.dateDeVoyage|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ voyage.note }}</td>
                <td>{{ voyage.nbDeKmParcourues }}</td>
                <td>{{ voyage.id }}</td>
                <td>{{ voyage.created ? voyage.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('voyage_show', {'id': voyage.id}) }}">show</a>
                    <a href="{{ path('voyage_edit', {'id': voyage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('voyage_new') }}">Create new</a>
{% endblock %}
